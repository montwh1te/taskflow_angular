/**
 * Firebase Storage Rules para TaskFlow
 * 
 * Regras de segurança para uploads de anexos
 */

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Função auxiliar para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }

    // Regras para anexos de tarefas
    // Estrutura: attachments/{userId}/{taskId}/{filename}
    match /attachments/{userId}/{taskId}/{allPaths=**} {
      // Permitir leitura apenas para o proprietário
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Permitir upload (create): arquivo < 10MB, tipos específicos
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.size < 10 * 1024 * 1024 &&
                       request.resource.contentType.matches('.*/(pdf|docx?|xlsx?|pptx?|jpe?g|png|gif|txt|zip|md)');
      
      // Permitir update: arquivo < 10MB
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.size < 10 * 1024 * 1024;
      
      // Permitir delete: apenas o proprietário
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Permitir leitura de arquivos públicos
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Negar todo o resto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
